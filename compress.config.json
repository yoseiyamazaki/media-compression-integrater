{
  "profiles": {
    "webm": {
      "options": "-c:v libvpx -b:v 2M -crf 10",
      "extension": ".webm",
      "sourceExtensions": [".mp4", ".mov"]
    },
    "hevc": {
      "options": "-c:v libx265 -crf 28 -preset medium -tag:v hvc1",
      "extension": ".mp4",
      "sourceExtensions": [".mp4", ".mov"]
    },
    "webp": {
      "options": "-quality 80",
      "extension": ".webp",
      "sourceExtensions": [".png", ".jpg", ".jpeg"]
    },
    "avif": {
      "options": "-crf 30 -speed 4",
      "extension": ".avif",
      "sourceExtensions": [".png", ".jpg", ".jpeg"]
    }
  }
}
